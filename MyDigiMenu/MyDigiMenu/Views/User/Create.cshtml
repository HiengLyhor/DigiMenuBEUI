@model MyDigiMenu.Models.UserInfoRequestToAPI
@{
    ViewData["Title"] = "Create User";
}

<h2>Create User Form</h2>
<div>
    <button class="btn btn-primary" onclick="window.history.back();"> Go Back</button>
</div>

@using (Html.BeginForm("Create", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Username)
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Role)
        @Html.DropDownListFor(model => model.Role, new SelectList(new List<string> { "USER", "ADMIN" }), new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShopName)
        @Html.TextBoxFor(model => model.ShopName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TelegramId)
        @Html.TextBoxFor(model => model.TelegramId, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShopDesc)
        @Html.TextAreaFor(model => model.ShopDesc, new { @class = "form-control", required = "required", rows = 4 })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShopLocation)
        @Html.TextBoxFor(model => model.ShopLocation, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OpenCloseTime)
        @Html.TextBoxFor(model => model.OpenCloseTime, new { @class = "form-control", required = "required", placeholder = "e.g., 09:00, 21:00" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImgUpload)
        @Html.TextBoxFor(model => model.ImgUpload, new
        {
            @class = "form-control",
            type = "file",
            accept = "image/png"
        })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Social)
        @Html.TextBoxFor(model => model.Social, new { @class = "form-control", placeholder = "e.g., Facebook, Instagram" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
